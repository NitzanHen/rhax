{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "lib": [
      "esnext"
    ],
    "noEmit": true,
    "removeComments": true,
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "dist",
  ]
}