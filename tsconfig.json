{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "test-data": [
        "../test/testdata"
      ]
    },
    "removeComments": true,
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "dist",
  ]
}